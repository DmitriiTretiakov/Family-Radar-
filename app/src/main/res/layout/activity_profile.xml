<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/photoProfile"
            android:layout_width="@dimen/image_profile_layout_width"
            android:layout_height="@dimen/image_profile_layout_height"
            android:layout_marginStart="@dimen/image_profile_layout_marginStart"
            android:layout_marginTop="@dimen/image_profile_layout_marginTop"
            android:background="@drawable/circle" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="@dimen/name_profile_layout_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/name_profile_layout_marginLeft"
            android:layout_marginTop="@dimen/name_profile_layout_marginTop"
            android:theme="@style/textProfile" />

        <TextView
            android:id="@+id/emailProfile"
            android:layout_width="@dimen/email_profile_layout_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/email_profile_layout_marginLeft"
            android:layout_marginTop="@dimen/email_profile_layout_marginTop"
            android:theme="@style/emailProfile" />

        <Button
            android:id="@+id/buttonSignOutAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_sent_layout_marginTop"
            android:theme="@style/buttonSendInquiry"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
</layout>