<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/photoProfileSearch"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/nameSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="Name"
        android:textColor="@color/colorTextProfile"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/photoProfileSearch"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emailSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="Email"
        android:textColor="@color/colorEmailProfile"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/photoProfileSearch"
        app:layout_constraintTop_toBottomOf="@+id/nameSearch" />
</android.support.constraint.ConstraintLayout>